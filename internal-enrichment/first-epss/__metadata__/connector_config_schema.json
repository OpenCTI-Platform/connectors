{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://www.filigran.io/connectors/first-epss_config.schema.json",
  "type": "object",
  "properties": {
    "OPENCTI_URL": {
      "description": "The base URL of the OpenCTI instance.",
      "format": "uri",
      "maxLength": 2083,
      "minLength": 1,
      "type": "string"
    },
    "OPENCTI_TOKEN": {
      "description": "The API token to connect to OpenCTI.",
      "type": "string"
    },
    "CONNECTOR_NAME": {
      "default": "First EPSS",
      "description": "The name of the connector.",
      "type": "string"
    },
    "CONNECTOR_SCOPE": {
      "default": [
        "vulneribility"
      ],
      "description": "The scope of the connector.",
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "CONNECTOR_LOG_LEVEL": {
      "default": "error",
      "description": "The minimum level of logs to display.",
      "enum": [
        "debug",
        "info",
        "warn",
        "warning",
        "error"
      ],
      "type": "string"
    },
    "CONNECTOR_TYPE": {
      "const": "INTERNAL_ENRICHMENT",
      "default": "INTERNAL_ENRICHMENT",
      "type": "string"
    },
    "CONNECTOR_AUTO": {
      "default": false,
      "description": "Whether the connector should run automatically when an entity is created or updated.",
      "type": "boolean"
    },
    "FIRST_EPSS_API_BASE_URL": {
      "default": "https://api.first.org/data/v1/epss",
      "description": "The base URL of the FIRST EPSS API.",
      "format": "uri",
      "maxLength": 2083,
      "minLength": 1,
      "type": "string"
    },
    "FIRST_EPSS_MAX_TLP": {
      "default": "TLP:AMBER",
      "description": "The maximum TLP level for the connector.",
      "enum": [
        "TLP:CLEAR",
        "TLP:WHITE",
        "TLP:GREEN",
        "TLP:AMBER",
        "TLP:AMBER+STRICT",
        "TLP:RED"
      ],
      "type": "string"
    }
  },
  "required": [
    "OPENCTI_URL",
    "OPENCTI_TOKEN"
  ],
  "additionalProperties": true
}