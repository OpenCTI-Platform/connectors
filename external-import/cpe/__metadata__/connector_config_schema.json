{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://www.filigran.io/connectors/cpe_config.schema.json",
  "type": "object",
  "properties": {
    "OPENCTI_URL": {
      "description": "The base URL of the OpenCTI instance.",
      "format": "uri",
      "maxLength": 2083,
      "minLength": 1,
      "type": "string"
    },
    "OPENCTI_TOKEN": {
      "description": "The API token to connect to OpenCTI.",
      "type": "string"
    },
    "CONNECTOR_NAME": {
      "default": "Cpe",
      "description": "The name of the connector.",
      "type": "string"
    },
    "CONNECTOR_SCOPE": {
      "default": [],
      "description": "The scope of the connector.",
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "CONNECTOR_LOG_LEVEL": {
      "default": "error",
      "description": "The minimum level of logs to display.",
      "enum": [
        "debug",
        "info",
        "warn",
        "warning",
        "error"
      ],
      "type": "string"
    },
    "CONNECTOR_TYPE": {
      "const": "EXTERNAL_IMPORT",
      "default": "EXTERNAL_IMPORT",
      "type": "string"
    },
    "CONNECTOR_DURATION_PERIOD": {
      "default": "PT1H",
      "description": "The period of time to await between two runs of the connector.",
      "format": "duration",
      "type": "string"
    },
    "CPE_BASE_URL": {
      "default": "https://services.nvd.nist.gov/rest/json/cpes/2.0",
      "description": "URL for the NIST NVD CPE API.",
      "type": "string"
    },
    "CPE_API_KEY": {
      "default": "**********",
      "description": "API Key for the NIST NVD API.",
      "format": "password",
      "type": "string",
      "writeOnly": true
    },
    "CPE_INTERVAL": {
      "default": "6h",
      "description": "Interval between collections (format: `6h` for hours, `3600s` for seconds). Minimum recommended: 6 hours.",
      "type": "string"
    }
  },
  "required": [
    "OPENCTI_URL",
    "OPENCTI_TOKEN"
  ],
  "additionalProperties": true
}