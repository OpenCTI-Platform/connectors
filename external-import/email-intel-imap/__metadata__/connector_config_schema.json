{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://www.filigran.io/connectors/email-intel-imap_config.schema.json",
  "type": "object",
  "properties": {
    "OPENCTI_URL": {
      "format": "uri",
      "maxLength": 2083,
      "minLength": 1,
      "type": "string"
    },
    "OPENCTI_TOKEN": {
      "type": "string"
    },
    "CONNECTOR_NAME": {
      "default": "Email Intel IMAP",
      "description": "The name of the connector.",
      "type": "string"
    },
    "CONNECTOR_TYPE": {
      "const": "EXTERNAL_IMPORT",
      "default": "EXTERNAL_IMPORT",
      "description": "The type of the connector.",
      "type": "string"
    },
    "CONNECTOR_SCOPE": {
      "default": [
        "email-intel-imap"
      ],
      "description": "The scope of the connector.",
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "CONNECTOR_DURATION_PERIOD": {
      "default": "PT1H",
      "description": "The period of time to await between two runs of the connector.",
      "format": "duration",
      "type": "string"
    },
    "CONNECTOR_LOG_LEVEL": {
      "enum": [
        "debug",
        "info",
        "warning",
        "error",
        "critical"
      ],
      "type": "string"
    },
    "EMAIL_INTEL_IMAP_TLP_LEVEL": {
      "default": "amber+strict",
      "description": "Traffic Light Protocol (TLP) level to apply on objects imported into OpenCTI.",
      "enum": [
        "white",
        "clear",
        "green",
        "amber",
        "amber+strict",
        "red"
      ],
      "type": "string"
    },
    "EMAIL_INTEL_IMAP_RELATIVE_IMPORT_START_DATE": {
      "default": "P30D",
      "description": "The relative start date to import emails in ISO 8601 duration format (e.g. P30D for 30 days).",
      "format": "duration",
      "type": "string"
    },
    "EMAIL_INTEL_IMAP_HOST": {
      "description": "IMAP server hostname or IP address",
      "type": "string"
    },
    "EMAIL_INTEL_IMAP_PORT": {
      "default": 993,
      "description": "IMAP server port number",
      "type": "integer"
    },
    "EMAIL_INTEL_IMAP_USERNAME": {
      "description": "Username to authenticate to the IMAP server. Either `password` or `google_token_json` must be set as well.",
      "type": "string"
    },
    "EMAIL_INTEL_IMAP_PASSWORD": {
      "default": null,
      "description": "Password to authenticate to the IMAP server. Either `password` or `google_token_json` must be set.",
      "format": "password",
      "type": "string",
      "writeOnly": true
    },
    "EMAIL_INTEL_IMAP_GOOGLE_TOKEN_JSON": {
      "default": null,
      "description": "Content of the token.json file from Google API. Either `password` or `google_token_json` must be set.",
      "format": "password",
      "type": "string",
      "writeOnly": true
    },
    "EMAIL_INTEL_IMAP_MAILBOX": {
      "default": "INBOX",
      "description": "The mailbox to monitor (e.g., INBOX)",
      "type": "string"
    },
    "EMAIL_INTEL_IMAP_ATTACHMENTS_MIME_TYPES": {
      "default": [
        "application/pdf",
        "text/csv",
        "text/plain"
      ],
      "description": "List of attachment MIME types to process (comma-separated)",
      "items": {
        "type": "string"
      },
      "type": "array"
    }
  },
  "required": [
    "OPENCTI_URL",
    "OPENCTI_TOKEN",
    "EMAIL_INTEL_IMAP_HOST",
    "EMAIL_INTEL_IMAP_USERNAME"
  ],
  "additionalProperties": true
}