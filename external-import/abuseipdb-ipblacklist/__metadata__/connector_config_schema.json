{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://www.filigran.io/connectors/abuseipdb-ipblacklist_config.schema.json",
  "type": "object",
  "properties": {
    "OPENCTI_URL": {
      "description": "The base URL of the OpenCTI instance.",
      "format": "uri",
      "maxLength": 2083,
      "minLength": 1,
      "type": "string"
    },
    "OPENCTI_TOKEN": {
      "description": "The API token to connect to OpenCTI.",
      "type": "string"
    },
    "CONNECTOR_NAME": {
      "default": "AbuseipdbIpblacklist",
      "description": "The name of the connector.",
      "type": "string"
    },
    "CONNECTOR_SCOPE": {
      "default": [
        "abuseipdb-blacklist"
      ],
      "description": "The scope of the connector.",
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "CONNECTOR_LOG_LEVEL": {
      "default": "error",
      "description": "The minimum level of logs to display.",
      "enum": [
        "debug",
        "info",
        "warn",
        "warning",
        "error"
      ],
      "type": "string"
    },
    "CONNECTOR_TYPE": {
      "const": "EXTERNAL_IMPORT",
      "default": "EXTERNAL_IMPORT",
      "type": "string"
    },
    "CONNECTOR_DURATION_PERIOD": {
      "default": "PT1H",
      "description": "The period of time to await between two runs of the connector.",
      "format": "duration",
      "type": "string"
    },
    "ABUSEIPDB_API_URL": {
      "default": "https://api.abuseipdb.com/api/v2/blacklist",
      "description": "AbuseIPDB API endpoint URL.",
      "type": "string"
    },
    "ABUSEIPDB_API_KEY": {
      "description": "Your AbuseIPDB API key.",
      "format": "password",
      "type": "string",
      "writeOnly": true
    },
    "ABUSEIPDB_SCORE": {
      "default": 75,
      "description": "Minimum confidence score threshold for IP addresses.",
      "type": "integer"
    },
    "ABUSEIPDB_LIMIT": {
      "default": 500000,
      "description": "Maximum number of IPs to fetch.",
      "type": "integer"
    },
    "ABUSEIPDB_CREATE_INDICATOR": {
      "default": false,
      "description": "Whether to create Indicators from observables.",
      "type": "boolean"
    },
    "ABUSEIPDB_TLP_LEVEL": {
      "default": "clear",
      "description": "TLP marking for imported data (`clear`, `green`, `amber`, `amber+strict`, `red`).",
      "type": "string"
    },
    "ABUSEIPDB_IPVERSION": {
      "default": "mixed",
      "description": "IP version filter: `4`, `6`, or `mixed`.",
      "enum": [
        "4",
        "6",
        "mixed"
      ],
      "type": "string"
    },
    "ABUSEIPDB_EXCEPTCOUNTRY": {
      "default": null,
      "description": "Comma-separated country codes to exclude (e.g., `RU,CN`).",
      "type": "string"
    },
    "ABUSEIPDB_ONLYCOUNTRY": {
      "default": null,
      "description": "Comma-separated country codes to include only.",
      "type": "string"
    }
  },
  "required": [
    "OPENCTI_URL",
    "OPENCTI_TOKEN",
    "ABUSEIPDB_API_KEY"
  ],
  "additionalProperties": true
}