{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://www.filigran.io/connectors/hunt-io_config.schema.json",
  "type": "object",
  "properties": {
    "OPENCTI_URL": {
      "description": "The base URL of the OpenCTI instance.",
      "format": "uri",
      "maxLength": 2083,
      "minLength": 1,
      "type": "string"
    },
    "OPENCTI_TOKEN": {
      "description": "The API token to connect to OpenCTI.",
      "type": "string"
    },
    "CONNECTOR_NAME": {
      "default": "Hunt IO",
      "description": "Connector name",
      "type": "string"
    },
    "CONNECTOR_SCOPE": {
      "default": [
        "Hunt IO"
      ],
      "description": "Connector scope",
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "CONNECTOR_LOG_LEVEL": {
      "default": "error",
      "description": "The minimum level of logs to display.",
      "enum": [
        "debug",
        "info",
        "warn",
        "warning",
        "error"
      ],
      "type": "string"
    },
    "CONNECTOR_TYPE": {
      "const": "EXTERNAL_IMPORT",
      "default": "EXTERNAL_IMPORT",
      "type": "string"
    },
    "CONNECTOR_DURATION_PERIOD": {
      "description": "The period of time to await between two runs of the connector.",
      "format": "duration",
      "type": "string"
    },
    "HUNT_IO_API_BASE_URL": {
      "description": "API base URL",
      "type": "string"
    },
    "HUNT_IO_API_KEY": {
      "description": "API key",
      "format": "password",
      "type": "string",
      "writeOnly": true
    },
    "HUNT_IO_TLP_LEVEL": {
      "default": "amber",
      "description": "TLP level",
      "enum": [
        "white",
        "clear",
        "green",
        "amber",
        "amber+strict",
        "red"
      ],
      "type": "string"
    }
  },
  "required": [
    "OPENCTI_URL",
    "OPENCTI_TOKEN",
    "CONNECTOR_DURATION_PERIOD",
    "HUNT_IO_API_KEY"
  ],
  "additionalProperties": true
}